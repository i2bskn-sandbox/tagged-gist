<% if @current_user %>
<% if @gists.count > 0 %>
<ul class="thumbnails">
<% @gists.each do |g| %>
  <li class="span4">
    <div class="well">
      <h5><%= link_to "Gist: #{g.gid}", gists_show_path(g) %></h5>
      <% g.tags.each do |tag| %>
      <span class="label label-info"><i class="icon-tag icon-white"></i> <%= tag.name %></span>
      <% end %>
      <p><%= g.description %></p>
      <%= form_tag gists_tagged_path(g), class: "form-inline" do %>
      <div class="gist">
      <%= text_field_tag "name", nil, class: "input-small check_field", placeholder: "Tag Name", required: true %>
      <%= submit_tag "Tagging", class: "btn btn-small submit_button", disabled: "disabled" %>
      </div>
      <% end %>

      <% if @current_tag %>
      <div class="untagged">
        <a class="untagged_button" href="javascript:void(0)">Untagged <%= @current_tag %></a>
        <input type="hidden" class="name" name="name" value="<%= @current_tag %>">
        <input type="hidden" class="gist_id" name="gist_id" value="<%= g.id %>">
      </div>
      <% end %>

      <%= link_to "Gist", g.html_url, target: "_blank" %>
    </div>
  </li>
<% end %>
</ul>
<% else %>
<div class="span12">
  <p class="text-error">Gists are not synchronized. Please click Sync Gist or register Gist.</p>
</div>
<% end %>
<% end %>
